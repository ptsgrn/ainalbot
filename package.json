    "@types/express-status-monitor": "^1.3.0",
    "@types/jsonfile": "^6.1.1",
    "@types/luxon": "^3.3.0",
    "@types/node": "^18.15.11",
    "dotenv": "^16.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "pnpm": {
    "overrides": {
      "jsonwebtoken@<=8.5.1": ">=9.0.0",
      "engine.io@<3.6.1": ">=3.6.1",
