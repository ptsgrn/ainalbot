{
  "name": "patsabot",
  "version": "2.2.0",
  "private": "true",
  "description": "NodeJS bot to go with Thai wikipedia",
  "exports": "./src/index.js",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write . --ignore-unknown",
    "setup": "echo \">> This process will add 'patsabot' as a global command.\" && npm install -g .",
    "postsetup": ">> Done! You can now run 'patsabot' to start the bot.",
    "start": "node ./src/patsabot/git-pull.js",
    "build": "tsc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ptsgrn/patsabot.git"
  },
  "author": "Patsagorn Y.",
  "maintainers": [
    {
      "name": "Patsagorn Y.",
      "email": "mpy@toolforge.org",
      "web": "https://w.wiki/JSB"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ptsgrn/patsabot/issues"
  },
  "homepage": "https://github.com/ptsgrn/patsabot#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bin": {
    "patsabot": "./src/patsabot/run.js"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.0",
    "axios": "^0.27.2",
    "axios-rate-limit": "^1.3.0",
