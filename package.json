{
  "name": "patsabot",
  "version": "2.2.0",
  "private": "true",
  "description": "NodeJS bot to go with Thai wikipedia",
  "exports": "./src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.5.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write . --ignore-unknown",
    "setup": "echo \">> This process will add 'patsabot' as a global command.\" && npm install -g .",
    "postsetup": ">> Done! You can now run 'patsabot' to start the bot.",
    "start": "node ./dist/patsabot/start.js",
    "build": "tsc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ptsgrn/patsabot.git"
  },
  "author": "Patsagorn Y.",
  "maintainers": [
    {
      "name": "Patsagorn Y.",
      "email": "mpy@toolforge.org",
      "web": "https://w.wiki/JSB"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ptsgrn/patsabot/issues"
  },
  "homepage": "https://github.com/ptsgrn/patsabot#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bin": {
    "patsabot": "./src/patsabot/run.js"
  },
  "dependencies": {
    "@hokify/axios-rate-limit": "^2.0.5",
    "@paralleldrive/cuid2": "^2.2.2",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "cron": "^2.4.4",
    "cronstrue": "^2.47.0",
    "express-status-monitor": "^1.3.4",
    "matrix-org-irc": "^1.5.0",
    "meow": "^11.0.0",
    "moment": "^2.29.4",
    "mwn": "^1.11.5",
    "mysql2": "^2.3.3",
    "node-ts": "^6.0.1",
    "winston": "^3.11.0",
    "winston-transport": "^4.6.0"
  },
  "optionalDependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.21",
    "@types/express-status-monitor": "^1.3.3",
    "@types/jsonfile": "^6.1.4",
    "@types/luxon": "^3.3.6",
    "@types/node": "^18.19.1",
    "dotenv": "^16.3.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "2.8.7",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "pnpm": {
    "overrides": {
      "engine.io@<3.6.1": ">=3.6.1",
      "socket.io-parser@>=3.4.0 <3.4.2": ">=3.4.2",
      "socket.io-parser@<3.3.3": ">=3.3.3",
      "socket.io-parser@>=3.4.0 <3.4.3": ">=3.4.3",
      "tough-cookie@<4.1.3": ">=4.1.3",
      "semver@>=6.0.0 <6.3.1": ">=6.3.1",
      "semver@>=7.0.0 <7.5.2": ">=7.5.2",
      "debug@>=4.0.0 <4.3.1": ">=4.3.1"
    }
  }
}
