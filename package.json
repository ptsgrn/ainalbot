    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "matrix-org-irc": "^1.5.0",
    "meow": "^10.1.5",
    "moment": "^2.29.4",
    "mwn": "^1.11.5",
    "mysql2": "^2.3.3",
    "node-cron": "^3.0.2",
    "sanitize-filename": "^1.6.3",
    "superagent": "^8.0.9",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-discord-transport": "^1.3.0",
    "winston-transport": "^4.5.0"
  },
  "optionalDependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "cz-conventional-changelog": "^3.3.0",
    "express": "^4.18.1",
    "express-jwt": "^7.7.7",
